rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // System Prompt Versions - Shared across all authenticated users
    match /invoicer_systemPromptVersions/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Hinnasto (Price List) - Shared across all authenticated users
    match /hinnasto/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Tilaus Data (Order Data) - Shared across all authenticated users
    match /tilaus_data/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // MyyntiExcel (Sales Invoices) - User-specific
    match /myyntiExcel/{document=**} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || 
         !("userId" in resource.data));
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // ERP Documents - User-specific
    match /invoicer_erpDocuments/{document=**} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow write: if isAuthenticated();
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}